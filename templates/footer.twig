<footer class="col-12">
    <div class="container col-auto mx-auto row  pt-4 justify-content-center">
        <div class="row col-md-7 col-lg-4 px-0">
            <div class="col-12 col-md-5">
                <p>CONT√ÅCTANOS</p>
            </div>
            <div class="content col-12 col-md-6 px-0 ">
                {{ informacionContacto.contactInfo }}
            </div>
        </div>

        <div class="row col-md-5 col-lg-3 px-0">
            <div class="col-6 col-md-5">
                <p>SERVICIOS</p>
            </div>
            <div class="content col-6 col-md-6 px-0">
                <p>
                    {% set navPages = craft.entries.section('navbar').all() %}
                    {% nav entry in navPages %} {% if not entry.hasDescendants()
                    %} {% set url = entry.sitePageLink.one() %}
                    <a href="{{ url }}">
                        {{ entry.title }}
                    </a>
                    <br />
                    {% endif %} {% endnav %}
                </p>
            </div>
        </div>

        <div class="row col-md-7 col-lg-3 px-0">
            <div class="col-6 col-md-5">
                <p>ENLACES</p>
            </div>
            <div class="content col-6 col-md-7 px-0">
                <p>
                    {% for module in linksExternos.links.all() %} {% include
                    "_modules/" ~ module.type %} {% endfor %}
                </p>
            </div>
        </div>

        <div class="row justify-content-center col-md-5 col-lg-auto px-0">
            {% for module in redesSociales.socialMedia.all() %} {% include
            "_modules/" ~ module.type %} {% endfor %}
        </div>
    </div>

    <div class="ref pb-3 mt-4">
        Icons made by
        <a
            href="https://www.flaticon.com/authors/pixel-perfect"
            title="Pixel perfect"
            >Pixel perfect</a
        >
        ,
        <a href="https://www.flaticon.com/authors/freepik" title="Freepik"
            >Freepik</a
        >
        from
        <a href="https://www.flaticon.com/" title="Flaticon"
            >www.flaticon.com</a
        >
    </div>
</footer>

